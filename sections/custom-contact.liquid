{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  #shopify-section-{{id}} {
    .wrapper-{{ id }}{
      display: grid;
      grid-template-columns: repeat(2,minmax(0,1fr));
      @media(max-width: 768px){
        grid-template-columns: minmax(0,1fr);
        gap: var(--Spacing-Container-md, 24px);
      }
    }
    .content-wrapper{
      padding-right: var(--Spacing-Container-xxl, 80px);

      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: var(--Spacing-Container-xl, 32px);
      flex: 1 0 0;

      @media(max-width: 768px){
        padding-right: unset;
      }
    }
    .text-wrapper{
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: var(--Spacing-Container-xs, 12px);
      align-self: stretch;
    }
    .title{
      margin: 0;
      color: #000;
      font-family: var(--font-family-Title, Gotham);
      font-style: normal;
      letter-spacing: 0.46px;
      text-transform: uppercase;
    }
    .description{
      margin: 0;
      color: var(--Content-Base-base, #4B5563);

      /* Paragraph/Large */
      font-family: var(--font-family-Body, Gotham);
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Large, 28px); /* 175% */
    }
    .phone-container{
      display: flex;
      align-items: flex-start;
      gap: 16px;
      align-self: stretch;
    }
    .phone-wrapper{

    }
    .phone-text {
      color: var(--Text-primary, #000);
      margin: 0;
      /* font-family: var(--font-family-Title, "Neue Plak"); */
      font-size: var(--Font-Size-Heading-H5, 24px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H5, 28px); /* 116.667% */
    }
    .phone-number, .phone-number a{
      margin: 0;
      color: #000;
      text-align: center;
      font-family: var(--font-family-Body, Gotham);
      font-size: var(--Font-Size-Paragraph-Large, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Large, 28px); /* 175% */
    }

    /* Contact Form */
    .contact-form-wrapper {
        border-radius: var(--rounded-2xl, 16px);
        border: 1px solid #ffffff;
        padding: 40px;
        box-shadow: 0px 4px 10px #ffffff;
        background: #72334221;
        overflow: hidden;
        @media(max-width: 768px) {
            padding: 20px;
        }
    }

    .form-status--message{
      color: var(--Text-primary, #000);
      /* font-family: var(--font-family-Title, "Neue Plak"); */
      font-size: var(--Font-Size-Heading-H4);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H4); /* 100% */
      letter-spacing: -0.4px;
    }

    .field {
      display: flex;
      flex-direction: column;
      margin-bottom: 15px;
    }

    .field__label {
      font-weight: 600;
      margin-bottom: 5px;
      font-family: var(--font-body-family);
      font-size: 16px;
      color: #333;
      display: block; /* Ensures label is visible */
    }

    .field__input {
      padding: 10px;
      font-size: 14px;
      transition: border-color 0.3s ease-in-out;
      border-radius: 5px;
      border: 1px solid var(--Border-Base-main, #D1D5DB);
      background: var(--Background-base, #FFF);
      font-family: var(--font-body-family);
      font-size: 16px;
    }

    .field__input:focus {
      border-color: #333;
      outline: none;
    }

    .text-area {
      min-height: 100px;
    }

    .contact__button {
      text-align: center;
      margin-top: 10px;
    }

    .button {
      width: 100%;
      cursor: pointer;
      border-radius: 5px;
      {% comment %} border-radius: 0;
      /* background: #000; */
      background: #212B36;
      padding: var(--Spacing-Container-xs, 12px) var(--Spacing-Container-lg, 40px);
      color: #FFF;
      text-align: center;
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-UI-Controls-Control-Button-Small, 20px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-UI-Controls-Control-Button-Small, 20px); /* 100% */
      text-transform: uppercase;
      text-decoration: none;
      display: block; {% endcomment %}
    }
    .field:before {
      content: unset;
    }
    .field:after {
      content: unset;
    }
    .field__label{
      position: static;
      color: #000;
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-Paragraph-Regular, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Regular, 24px); /* 150% */
      @media(max-width: 768px){

      }
    }
    .field__input {
        margin: 0 0 4px 0;
        /* border-bottom: 1px solid #00000054; */
        @media(max-width: 768px){
          /* padding: 0;          */
        }
    }
    .field__input:focus{
      margin: 0 0 4px 0;
      box-shadow: unset;
    }
    .field__input::placeholder {
      opacity: 1;
      color: var(--Color-Neutral-neutral, #666);
      font-family: var(--font-family-Body, "Neue Plak");
      font-size: var(--Font-Size-Paragraph-Small, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Small, 24px); /* 150% */
    }


.phone-wrapper {
