{% liquid
  assign id = section.id
  assign settings = section.settings
  assign blocks = section.blocks
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    /* background: #F6F3F3; */
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }
  .main-{{ id }} {
    display: grid;
    /* grid-template-columns: minmax(0px, 1fr) minmax(0px, 1.5fr); */
    justify-items: center;
    align-items: center;
    grid-gap: 64px;
  }
  .info-{{ id }} h2{
    color: var(--colors-text-text-primary-900, #000);
    text-align: center;
    font-family: var(--font-heading-family);
    margin: 0 0 40px 0;
    @media(max-width: 768px){
      margin-block: 12px 32px;
      margin: 0 0 24px 0;
      text-align: left;
    }
  }
  .text-{{ id }} {
    color: #000;
    text-align: left;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 23px;
    text-transform: capitalize;
    font-family: var(--font-body-family);
    margin: 24px 0 0 0;
  }
  .text-{{ id }} p{
    /* color: #7D7D7D; */
    margin: 0;
  }
  .btn-{{ id }} {
    /* position: relative; */
    padding: 0  0 2px 0;
    border-bottom: 1px solid #000;
    width: max-content;
  }
  .info-{{ id }} {
      img {
        max-width:100%;
        height: auto;
         @media(max-width:768px){
            display: none;
        }
      }


   }
  .btn-{{ id }} a{
    font-size: 14px;
    font-weight: 500;
    line-height: 30px;
    letter-spacing: 1.31px;
    color: #000;
    text-decoration: none;
  }
    .custom__faq-wrapper{{section.id}}{
      /* max-width: 90%; */
      margin: auto;
      /* align-self: flex-start; */
    }

    .accordion__intro {
        position: relative;
        cursor: pointer;
        display: flex;
        gap: 24px;
        box-sizing: border-box;
        transition: all 1s ease-in-out;
        justify-content: space-between;
        align-items: center;
    }
   .icon-{{ id }} span{
        display: flex;
        width: 24px;
        height: 24px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap:  8px;
        border-radius: 56px;
        background:  #FFF;
    }
   .icon-{{ id }} .plus,
   .icon-{{ id }} .minus{
      transition: all 0.4s ease-in-out;
    }
    .accordion__intro h1 {
      /* font-family: "satoshi medium"; */
      color: var(--Content-Base-main, #000);
      font-size: 24px;
      font-style: normal;
      line-height: 28px;
      margin: 0;
    }
    .accordion__intro .number-{{ id }} {
      background: rgba(255, 255, 255, 0.1);
      font-size: 40px;
      font-weight: 700;
      color: #000;
      margin: 0;
      text-align: center;
      font-family: var(--font-heading-family);
      height: 105px;
      width: 150px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: .4s ease-in-out;
    }
    .accordion__content {
      color: #4B5563;
      font-family: var(--font-body-family);
      color: var(--Content-Base-base, #000);
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      line-height: 24px;
      margin: 0;
      max-height: 0;
      overflow: hidden;
      /* will-change: max-height; */
      transition: all 0.25s ease-out;
      opacity: 0;
    }
    .accordion__content ul{
      color: #000;
    }
  .accordion__content p {
    margin: 0;
    /* font-size: 16px;
    line-height: 20px; */
   }
    .accordion__icons{
      font-size: 0;
      line-height: 0;
      position: relative;
    }

    .custom__faq-inner-wrapper {
        max-width: 768px;
        margin: auto;
    }
    .custom__faq-inner-wrapper .accordion__faq{
      background: #fff;
      /* padding: 16px; */
      border-radius: 0;
    }
    .custom__faq-inner-wrapper .accordion__faq:not(:last-child){
      margin-bottom: 16px;
      padding-bottom: 16px;
      border-bottom: 1px solid var(--Border-Base-subtle, #E5E7EB);
    }
    .accordion__intro-text{
      color: #000;
      font-size: 16px;
      font-style: normal;
      font-weight: 700;
      font-family: var(--font-heading-family);
      line-height: normal;
      letter-spacing: 1.6px;
      display: flex;
      align-items: center;
      gap: 20px;
    }
  /* When accordin is active starts.................................. */
    .accordion__active-faq .accordion__content {
      opacity: 1;
      margin: 12px 0px 0  0px;
      boz-sizing: border-box;
    }
    .accordion__active-faq .icon-{{ id }} .plus {
      /* display: none; */
      rotate: 45deg;
    }
    /* .accordion__active-faq .icon-{{ id }} .minus {
        display: flex;
    }
    .icon-{{ id }} .minus{
        display: none;
    } */
  /* When accordin is active ends.................................. */
    @media screen and (min-width: 768px){
      .custom__faq-wrapper{{section.id}}.page-width{
        padding: 0;
      }
    }
  @media(max-width: 768px) {
    #shopify-section-{{ id }} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }

    .custom__faq-inner-wrapper .accordion__faq:not(:last-child){
      margin-bottom: 16px;
    }
      .accordion__intro {
          gap: 16px;
      }
      .accordion__intro h1{
        font-size: 20px;
        line-height: 24px;
      }
      .accordion__intro svg{
        height: 20px;
        width: 20px;
      }
    .accordion__intro .number-{{ id }} {
      padding: 14px 30px;
      justify-content: start;
    }
      .accordion__intro .number-{{ id }} {
        width: 100%;
      }
      .custom__faq-wrapper{{section.id}} {
        max-width: 100%;
      }
      .accordion__intro h4{
        font-size: 14px;
        line-height: normal;
        /* font-family: var(--font-heading-family); */
      }
      .accordion__content{
        margin: 12px 0px 0 40px;
      }
    .main-{{ id }}{
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    .text-{{ id }} {
      color: var(--Content-Base-base, #4B5563);
      font-family: var(--font-heading-family);
      font-size: 14px;
      font-style: normal;
      font-weight: 400;
      line-height: 20px; /* 142.857% */
      text-transform: capitalize;;
      margin: 16px 0 32px 0;
    }
  .info-{{ id }} {
      gap: 0;
      padding-block: 0;
   }
  }
</style>

<div id="{{ section.settings.sec_id | downcase }}" class=" belongsToNav sec-{{ id }} {% unless section.settings.full_width %}page-width{% endunless %}">
  <div class="info-{{ id }}">
    <h2>{{ section.settings.heading }}</h2>
  </div>
  <div class="main-{{ id }}">
    {% comment %}
      <div class="info-{{ id }}">
        {{ section.settings.image | image_url: width: section.settings.image.width | image_tag }}
      </div>
    {% endcomment %}
    <div class="custom__faq-wrapper{{section.id}}">
      <div class="custom__faq-container">
        <div class="custom__faq-inner-wrapper">
          {% for block in section.blocks %}
            {% if block.type == 'item' %}
              <div data-aos="fade-up" class="accordion__faq " data-aos-delay="{{ forloop.index | times: 200 }}">
                <div class="accordion__intro">
                  <h1 class="faq_title-{{ id }}">{{ block.settings.title }}</h1>
                  <div class="icon-{{ id }}">
                    <span class="plus">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M12 6V12M12 12V18M12 12H18M12 12L6 12" stroke="#4B5563" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </span>
                    {% comment %}
                      <span class="minus">
                        <!--
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M2.39999 7.99995C2.39999 7.55812 2.75817 7.19995 3.19999 7.19995L12.8 7.19995C13.2418 7.19995 13.6 7.55812 13.6 7.99995C13.6 8.44178 13.2418 8.79995 12.8 8.79995L3.19999 8.79995C2.75817 8.79995 2.39999 8.44178 2.39999 7.99995Z" fill="#1F2937"/>
                          </svg>
                        -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                          <path fill-rule="evenodd" clip-rule="evenodd" d="M10.2929 3.29289C10.6834 2.90237 11.3166 2.90237 11.7071 3.29289L17.7071 9.29289C18.0976 9.68342 18.0976 10.3166 17.7071 10.7071L11.7071 16.7071C11.3166 17.0976 10.6834 17.0976 10.2929 16.7071C9.90237 16.3166 9.90237 15.6834 10.2929 15.2929L14.5858 11L3 11C2.44772 11 2 10.5523 2 10C2 9.44771 2.44772 9 3 9L14.5858 9L10.2929 4.70711C9.90237 4.31658 9.90237 3.68342 10.2929 3.29289Z" fill="#9CA3AF"/>
                        </svg>
                      </span>
                    {% endcomment %}
                  </div>
                </div>
                <div class="accordion__content">
                  <p>{{ block.settings.text }}</p>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  var accordionsFaq = document.querySelectorAll(".sec-{{ id }} .accordion__faq");
  accordionsFaq.forEach(ac => console.log("height: ", ac.clientHeight))

  var openAccordionFaq = (accordion) => {
  	var content = accordion.querySelector(".sec-{{ id }} .accordion__content");
  	accordion.classList.add("accordion__active-faq");
  	content.style.maxHeight = content.scrollHeight + 100 + "px";
  };

  var closeAccordionFaq = (accordion) => {
  	var content = accordion.querySelector(".sec-{{ id }} .accordion__content");
  	accordion.classList.remove("accordion__active-faq");
  	content.style.maxHeight = null;
  };

  accordionsFaq.forEach((accordion) => {
  	var intro = accordion.querySelector(".sec-{{ id }} .accordion__intro");
  	var content = accordion.querySelector(".sec-{{ id }} .accordion__content");

  	intro.onclick = () => {
  		if (content.style.maxHeight) {
  			closeAccordionFaq(accordion);
  		} else {
  			accordionsFaq.forEach((accordion) => closeAccordionFaq(accordion));
  			openAccordionFaq(accordion);
  		}
  	};
  });
  if (accordionsFaq.length > 0) {
    openAccordionFaq(accordionsFaq[0]);
  }
</script>

