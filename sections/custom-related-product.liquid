{{ 'component-card.css' | asset_url | stylesheet_tag }}
{% liquid
  assign id = section.id
%}
<style>
      .section-container--{{ section.id }}{
        margin-top: {{ section.settings.margin_top | append:'px' }};
        margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
        padding-top: {{ section.settings.padding_top | append:'px' }};
        padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
        background-color: {{ section.settings.bg-color }};
        overflow: hidden;
      }
      @media screen and (max-width: 768px){
        .section-container--{{ section.id }}{
          margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
          margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
          padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
          padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
        }
      }
    .section-container--{{ section.id }}{
        .--top-block {
          display: grid;
          grid-template-columns: repeat(2, minmax(0,1fr));
          gap: var(--Spacing-Container-xxs);
          align-items: end;
          /* margin-bottom: var(--Spacing-Container-md); */

          @media(max-width: 600px){
            grid-template-columns: minmax(0,1fr);
            gap: var(--Spacing-Container-xs);
          }
      }
        h2.--section-title {
          text-transform: capitalize;
          font-family: var(--font-heading-family);
          margin: 0;
        }
      .--section-subtitle {
          color: var(--primary-color);
          /* font-family: var(--font-family-Body, "Neue Plak"); */
          font-size: var(--Font-Size-Paragraph-Regular);
          line-height: var(--Line-Height-Paragraph-Regular);
          margin-block: 0 25px;
          font-weight: 500;
      }




      .--button-wrapper {
          display: flex;
          gap: var(--Spacing-Container-sm);
          justify-content: flex-end;
          @media(max-width: 600px){
            justify-content: flex-start;
          }
      }
    a.--button {
      display: block;
      text-transform: capitalize;
      text-align: center;
      font-family: var(--font-family-Body, "Aktiv Grotesk");
      font-size: var(--Font-Size-UI-Controls-Control-Button-Small, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-UI-Controls-Control-Button-Small, 16px);
      text-decoration-line: underline;
      display: inline-block;
      font-size: 2rem;
      font-weight: 400;
      text-transform: capitalize;
      color: var(--primary-color);
      -webkit-transition: all 0.3s linear;
      transition: all 0.3s linear;
      text-underline-offset: 5px;
    }

  .collection-wrapper {
      position: relative;
      margin-top: 60px;
      @media(max-width: 768px) {
        margin-top: 40px;
      }
  }
    .--nav-icon {
        width: 40px;
        height: 40px;
        display: flex;
        background: #fff;
        line-height: 1;
        position: absolute;
        top: 50%;
        z-index: 1;
        border-radius: 50%;
        align-items: center;
        justify-content: center;
        transform: translateY(-50%);
        box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
        cursor: pointer;
      svg {
          width: 16px;
          height: 16px;
      }
    }
    .--nav-icon.swiper-button-disabled, .swiper-button-lock {
        display: none;
    }
      .prev-{{ section.id }}.--nav-icon {
        /* left: -20px; */
        left: 0px;
      }
      .next-{{ section.id }}.--nav-icon {
        /* right: -20px; */
        right: 0px;
      }


    }
</style>

<recommendation-product
  data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}"
  data-product-id="{{ product.id }}"
  data-section-id="{{ section.id }}"
  data-wrapper-el="recommendation-container"
>
  <section class="section-container--{{ section.id }}">
    <div class="section-wrapper--{{ section.id }} page-width recommendation-container">
      <div class="--top-block">
        <div class="--text-content">
          {% if section.settings.subtitle != blank %}
            <div class="--section-subtitle">{{ section.settings.subtitle }}</div>
          {% endif %}
          <h2 class="--section-title">{{ section.settings.title }}</h2>
        </div>
        {% if section.settings.button_label != blank or section.settings.secondary_button_label != blank %}
          <div class="--button-wrapper">
            {% if section.settings.button_label != blank and section.settings.button_url != blank %}
              <a class="--button" href="{{ section.settings.button_url }}"> {{ section.settings.button_label }} </a>
            {% endif %}
            {% if section.settings.secondary_button_label != blank and section.settings.secondary_button_url != blank %}
              <a class="--button" href="{{ section.settings.secondary_button_url }}">
                {{ section.settings.secondary_button_label }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
      <div class="collection-wrapper" id="featured-collection-hs">
        <div class="swiper swiper-{{ section.id }}">
          <div class="swiper-wrapper">
            {%- for product in recommendations.products -%}
              <div class="swiper-slide">
                {% render 'product-card-v1', product: product %}
              </div>
            {% endfor %}
          </div>
        </div>
        <div class="prev-{{ section.id }} --nav-icon">
          {% render 'all-icons', name: 'swiper-left' %}
        </div>
        <div class="next-{{ section.id }} --nav-icon">
          {% render 'all-icons', name: 'swiper-right' %}
        </div>
      </div>
    </div>
  </section>
</recommendation-product>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    class RecommendationProduct extends HTMLElement {
      constructor() {
        super();
        this.wrapperEL = `.${this.dataset.wrapperEl}`;
        this.section = document.querySelector(`#shopify-section-${this.dataset.sectionId}`);
        this.renderSection();
      }

      renderSection() {
        let prevThis = this;
        fetch(this.dataset.url)
          .then((response) => response.text())
          .then((data) => {
            let html = new DOMParser().parseFromString(data, 'text/html');
            if (this.section) {
              this.section.querySelector(this.wrapperEL).innerHTML = html.querySelector(this.wrapperEL).innerHTML;
            }
          })
          .catch((error) => console.error('Error fetching recommendations:', error))
          .finally(() => {
            prevThis.initSwiper();
            // prevThis.initNavigation()
          });
      }

      initSwiper() {
        new Swiper('.swiper-{{ section.id }}', {
          slidesPerView: 1.2,
          spaceBetween: 16,
          // freeMode: true,
          breakpoints: {
            600: {
              slidesPerView: 4,
              spaceBetween: 24,
            },
          },
          loop: true,

          navigation: {
            nextEl: '.next-{{ section.id }}',
            prevEl: '.prev-{{ section.id }}',
          },
        });
      }

      // initNavigation (){
      //       document.getElementById('featured-collection-hs').addEventListener('mouseover', () => {
      //         document.getElementById('slider-prev--{{ section.id }}').style.left = '4px';
      //         document.getElementById('slider-next--{{ section.id }}').style.right = '8px';
      //       console.log("abc")
      //     });

      //      document.getElementById('featured-collection-hs').addEventListener("mouseleave", () => {
      //         document.getElementById('slider-prev--{{ section.id }}').style.left = '-500px';
      //         document.getElementById('slider-next--{{ section.id }}').style.right = '-500px';
      //        console.log("xyz")
      //      });
      // }
    }
    customElements.define('recommendation-product', RecommendationProduct);
  });
</script>
